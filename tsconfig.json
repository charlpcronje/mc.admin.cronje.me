{
  // https://v3.nuxtjs.org/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "nuxt-windicss",
      "@vueuse/nuxt",
      "unplugin-icons/types/vue"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "$models":       ["./server/models"],
      "$models/*":     ["./server/models/*"],
      "$notion":       ["./server/notion"],
      "$notion/*":     ["./server/notion/*"]
    } 
  }
}
